{
	"name": "МЖИ менеджер",
	"description": "Ускорение работы с отчетами МЖИ",
	"version": "1.5.0",
	"manifest_version": 3,
	"icons": {
		"16": "icons/ico16.png",
		"512": "icons/ico512.png"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"permissions": ["scripting", "activeTab", "storage"],
	"background": {},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["popup.css"]
		}
	]
}
